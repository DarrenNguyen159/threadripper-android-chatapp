<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="@dimen/space5"
        android:drawableRight="@drawable/ic_clock"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space5"
        android:text="5:04pm"
        android:textAppearance="@style/ExtraLight"
        android:textColor="@color/colorTextInfo"
        android:paddingTop="@dimen/space10"
        android:paddingBottom="@dimen/space5"
        android:textSize="@dimen/h4" />

    <TextView
        android:id="@+id/tv_chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space15"
        android:layout_marginLeft="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space15"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_chat_me"
        android:padding="@dimen/space10"
        android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
        android:textAppearance="@style/Light"
        android:textColor="@android:color/white"
        android:textSize="@dimen/h3"
        tools:ignore="RtlHardcoded" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rivChatImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/space15"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="@dimen/space15"
        android:layout_marginStart="90dp"
        android:maxHeight="400dp"
        android:minWidth="220dp"
        android:minHeight="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image_chat"
        app:riv_border_color="#E9ECEC"
        app:riv_border_width="1dp"
        app:riv_corner_radius="20dp"
        tools:ignore="RtlHardcoded" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fileContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="90dp"
        android:maxHeight="200dp"
        android:minWidth="220dp"
        android:minHeight="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_attached_file"
        app:riv_border_color="#E9ECEC"
        app:riv_border_width="1dp"
        app:riv_corner_radius="20dp"
        tools:ignore="RtlHardcoded" />

</LinearLayout>